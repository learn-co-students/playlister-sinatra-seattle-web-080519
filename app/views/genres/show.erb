<h1>Show a Genre</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3>Genre: </h3><%= @genre.name %>
<h3>Genre artists: </h3>
<% @genre.artists.each do |artist| %>
    <p><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></p><br>
<% end %>
<h3>Genre songs: </h3>
<% @genre.songs.each do |song| %>
    <p><a href="/songs/<%= song.slug %>"><%= song.name %></a></p><br>
<% end %>
<br>
<hr>