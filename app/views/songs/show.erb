<h1>View a Song</h1>
<hr>
<a href="/"><p>Main Page</p></a>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<hr>
<h3>Song artist: </h3><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
<h3>Song name: </h3><%= @song.name %>
<h3>Song genres: </h3>
<% @song.genres.each do |genre| %>
    <p><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
<% end %>
<hr>
<a href="/songs/<%=@song.slug%>/edit">Edit Song</a>

